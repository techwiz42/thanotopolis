[Unit]
Description=Thanotopolis Backend Development Server
After=network.target postgresql.service

[Service]
Type=exec
User=peter
Group=peter
WorkingDirectory=/home/peter/thanotopolis_dev/backend
Environment=PATH=/home/peter/.virtualenvs/thanos/bin:/usr/local/bin:/usr/bin:/bin
ExecStart=/home/peter/.virtualenvs/thanos/bin/uvicorn app.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target